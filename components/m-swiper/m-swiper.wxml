<!-- 展示轮播图 -->
<swiper class="swiper" indicator-dots="true" autoplay circular interval="3000" indicator-active-color="#ff5777">
  <block wx:for="{{list}}" wx:key="unique">
    <swiper-item class="swiper-item" style="height:100%;">
      <image src="{{item.image}}" class="swiper-img"  mode="widthFix" style="height:100%;width:100%;"></image>
    </swiper-item>
  </block>
</swiper>