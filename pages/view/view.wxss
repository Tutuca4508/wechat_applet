/* pages/view/view.wxss */
.main-view {
  position: relative;
  display: flex;
  justify-content: center;
  width: 100vw;
  height: 100vh;
  background: linear-gradient(to bottom,#82ccdd 50%,50%, #60a3bc);
}

button {
  position: absolute;
  bottom: 0;
}

.imgView {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.avatar {
  justify-self: center;
  width: 50px;
  height: 50px;
  border-radius: 50%;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
}

.hover-color {
  transition: 2s;
  transform: translateY(50%);
}

.pic {
  height: 30px;
  border-radius: 5px;
}